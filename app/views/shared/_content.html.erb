<div class="row text-center">
  <% @products.each_with_index do |product, product_counter| %>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%=link_to (image_tag product.image.thumb.url,
          class: "img-#{(product_counter + 1).even? ? "rounded": "circle"}
          image_home"), product %>
      </div>
      <div class="panel-footer">
        <span class="badge product_show">
          <%= product.price %>
        </span><br>
        <span class="label label-success product_show">
          <%= product.name %>
        </span>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="text-center">
  <%= will_paginate @products%>
</div>

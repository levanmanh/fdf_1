<tr class=" <%= (user_counter + 1).even? ? "success": "danger" %>">
  <td class="user-description">
    <%= user.email %>
  </td>
  <td class="col-actions text-right btn-group">
    <%= link_to [:admin, user], class: "btn btn-info btn-xs" do %>
      <span class="glyphicon glyphicon-eye-open"></span>
        <%= t "users.detail" %>
    <% end %>
    <%= link_to admin_user_path(user), method: :delete,
      class: "btn btn-danger btn-xs", data: {confirm:
      t("users.ok_delete")} do %>
      <span class="glyphicon glyphicon-remove"></span>
        <%= t "users.delete" %>
    <% end %>
  </td>
</tr>

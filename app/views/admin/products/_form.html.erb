<%= form_for [:admin, @product],
  html: {class: "product_form", multipart: true} do |f|%>
  <div id="error_explanation">
    <%= render "shared/error_messages", object: @product %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, class: "form-control", required: "true" %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <br>
    <%= f.text_field :price, type: "number", min: "1" , class: "form-control",
      required: "true" %>
  </div>
  <br>
  <div class="field">
      <%= f.collection_select :category_id, Category.all, :id,
        :name, {prompt: t("select_a_category")}, {class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description , class: "form-control" %>
  </div>
  <div class="field">
    <br>
    <%= f.file_field :image %>
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %>
    <% end %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@product, @comment] do |f| %>
      <%= render "shared/error_messages", object: @comment %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.text_area :content, class: "form-control required",
        required: "true" %>

      <%= f.submit t("comments.comment"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

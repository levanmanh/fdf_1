<% provide :title, t("suggestions.suggestion") %>
<h1><%= t "suggestions.new_suggestion" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @suggestion do |f| %>
      <%= render "shared/error_messages", object: @suggestion %>

      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", required: "true" %>

      <%= f.submit t("suggestions.send"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

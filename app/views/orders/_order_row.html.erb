<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
      <div class="col-md-3">
        <%= image_tag product.image.thumb.url, class: "img-rounded" %>
      </div>
    </div>
    <div class="col-xs-4">
      <%= form_for line_item, remote: true do |f| %>
        <h4 class="text-right">
          <%= t "order.unit_price" %>:
          <span class="price">
            <%= number_to_currency line_item.unit_price %>
          </span>
        </h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: line_item.quantity.to_i,
              class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit t("order.update_quantity"),
                class: "btn btn-primary" %>
              <%= link_to t("order.delete"), line_item, {data:
                {confirm: t("order.line_delete",
                name: line_item.product.name)},
                method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">
          <%= t "order.total_price" %>:
          <span class="price">
            <%= number_to_currency line_item.total_price %>
          </span>
        </h4>
      <% end %>
    </div>
  </div>
</div>

<% provide title: t("order.listing_orders") %>
<h1><%= t "order.listing_orders" %></h1>

<table class="table table-hover">
  <tr>
    <th><%= t "order.email" %></th>
    <th><%= t "order.total_pay" %></th>
    <th><%= t "order.status" %></th>
    <th><%= t "order.time" %></th>
    <th></th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= current_user.email %></td>
      <td><%= order.total_pay %> $</td>
      <td><%= order.status %></td>
      <td><%= order.created_at.strftime "%m/%d/%Y %I:%M%p" %></td>
      <td class="col-actions text-right btn-group">
        <%= link_to t("order.detail"), "#" %>
      </td>
    </tr>
  <% end %>
</table>

<div class="text-center">
  <%= paginate @orders %>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-8">
    <div class="text-right">
      <%= link_to t("order.go_back"), root_path %>
    </div>
  </div>
</div>
